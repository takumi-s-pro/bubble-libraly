<div class="auth-page">
  <h2 class="page-title">新規登録</h2>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "auth-form") do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :nickname, "ニックネーム" %>
      <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード（6文字以上）" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "登録する", class: "btn btn-edit" %>
    </div>
  <% end %>

  <div class="back-link">
    <%= link_to '← トップページに戻る', root_path, class: "btn btn-back" %>
  </div>
</div>
