<%= form_with(model: novel, local: true, class: "novel-form") do |form| %>
  <% if novel.errors.any? %>
    <div class="errors">
      <h3><%= pluralize(novel.errors.count, "件のエラー") %> があります:</h3>
      <ul>
        <% novel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "本文" %>
    <%= form.text_area :content, rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :expires_at, "公開期限" %>
    <%= form.datetime_select :expires_at, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "更新する", class: "btn btn-edit" %>
  </div>
<% end %>